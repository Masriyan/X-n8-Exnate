{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://x-n8.io/schemas/alert-input.json",
  "title": "X-n8 Unified Alert Schema",
  "description": "Standard input schema for SIEM alerts entering the X-n8 pipeline",
  "type": "object",
  "required": ["alert_id", "timestamp", "source", "severity", "event_type"],
  "properties": {
    "alert_id": {
      "type": "string",
      "description": "Unique alert identifier from SIEM"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the event"
    },
    "source": {
      "type": "string",
      "enum": ["splunk", "sentinel", "qradar", "wazuh", "elastic", "crowdstrike", "sentinelone", "defender"],
      "description": "Originating platform"
    },
    "severity": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low", "informational"],
      "description": "Alert severity level"
    },
    "event_type": {
      "type": "string",
      "description": "Normalized event type category"
    },
    "raw_event": {
      "type": "object",
      "description": "Original event payload from source"
    },
    "entities": {
      "type": "object",
      "properties": {
        "src_ip": {"type": "string", "format": "ipv4"},
        "dst_ip": {"type": "string", "format": "ipv4"},
        "user": {"type": "string"},
        "host": {"type": "string"},
        "domain": {"type": "string"},
        "file_hash": {"type": "string"},
        "process": {"type": "string"},
        "url": {"type": "string", "format": "uri"}
      }
    },
    "mitre_attack": {
      "type": "object",
      "properties": {
        "tactic": {"type": "string"},
        "technique": {"type": "string"},
        "technique_id": {"type": "string", "pattern": "^T[0-9]{4}(\\.[0-9]{3})?$"}
      }
    },
    "context": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional contextual metadata"
    }
  }
}
