{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://x-n8.io/schemas/response-feedback.json",
    "title": "XSOAR to X-n8 Response Schema",
    "description": "Feedback schema from XSOAR back to n8n for closed-loop automation",
    "type": "object",
    "properties": {
        "incident_id": {
            "type": "string"
        },
        "correlation_id": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": [
                "created",
                "in_progress",
                "closed_resolved",
                "closed_false_positive",
                "closed_duplicate",
                "pending"
            ]
        },
        "actions_taken": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "action": {
                        "type": "string"
                    },
                    "target": {
                        "type": "string"
                    },
                    "result": {
                        "type": "string",
                        "enum": [
                            "success",
                            "failure",
                            "partial"
                        ]
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "error_message": {
                        "type": "string"
                    }
                }
            }
        },
        "dbot_scores": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "indicator": {
                        "type": "string"
                    },
                    "indicator_type": {
                        "type": "string",
                        "enum": [
                            "ip",
                            "domain",
                            "file",
                            "url",
                            "email",
                            "cve"
                        ]
                    },
                    "score": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 3
                    },
                    "vendor": {
                        "type": "string"
                    }
                }
            }
        },
        "closing_notes": {
            "type": "string"
        },
        "analyst_feedback": {
            "type": "string"
        },
        "false_positive_reason": {
            "type": "string"
        },
        "tuning_recommendations": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}